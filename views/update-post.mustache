<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogger - update post</title>
  </head>
  <body>
    <div class="main-section">
      <form method="POST" action="/account/logout">
        <button>Log out</button>
      </form>
      <h1>Update Blog Post</h1>
      <a href="/posts">View All Posts</a>
      <a href="/posts/my-posts">View My Posts</a>

      <div class="secondary-section">
        <form method="POST" action="/posts/update">
          {{#post}}
          <div>
            <label for="category">Category</label>
            <select name="category" id="category">
              <option value="General">General</option>
              <option value="Python">Python</option>
              <option value="JavaScript">JavaScript</option>
              <option value="iOS">iOS</option>
              <option value="Android">Android</option>
              <option value="Other">Other</option>
            </select>
          </div>
          <div>
            <label>Post Title:</label>
            <input type="text" value="{{ title }}" name="title" />
          </div>

          <div>
            <label>Post Body:</label>
            <input type="text" value="{{ body }}" name="body" />
          </div>
          <div>
            <label>Public / Private</label>
            <input
              type="radio"
              name="publishStatus"
              id="public"
              value="public"
              checked="checked"
            />
            <label for="public">Public</label>
            <input
              type="radio"
              name="publishStatus"
              id="private"
              value="private"
            />
            <label for="public">Private</label>
          </div>
          <input type="hidden" value="{{ id }}" name="postID" />
          <button>Update Post</button>
          {{/post}}
        </form>
      </div>
    </div>
  </body>
</html>
